<Window x:Class="Template.Wpf.Configuration.ConnectionStringSetupWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Database Connection" Height="320" Width="520" WindowStartupLocation="CenterOwner">
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
    </Window.Resources>
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="8"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="8"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="8"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="12"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Enter SQL Server connection details" FontWeight="Bold" FontSize="14"/>

        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,0,0,8">
            <StackPanel Width="240">
                <TextBlock Text="Server" />
                <TextBox x:Name="ServerText" />
            </StackPanel>
            <StackPanel Width="240" Margin="16,0,0,0">
                <TextBlock Text="Database" />
                <TextBox x:Name="DatabaseText" />
            </StackPanel>
        </StackPanel>

        <GroupBox Grid.Row="4" Header="Authentication">
            <StackPanel Margin="8">
                <RadioButton x:Name="IntegratedRadio" Content="Windows Integrated Security" IsChecked="True"/>
                <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                    <RadioButton x:Name="SqlAuthRadio" Content="SQL Authentication" Margin="0,0,16,0"/>
                    <StackPanel Orientation="Horizontal" Visibility="{Binding ElementName=SqlAuthRadio, Path=IsChecked, Converter={StaticResource BoolToVis}}">
                        <TextBlock Text="User:" VerticalAlignment="Center" Margin="0,0,4,0"/>
                        <TextBox x:Name="UserText" Width="120" Margin="0,0,8,0"/>
                        <TextBlock Text="Password:" VerticalAlignment="Center" Margin="0,0,4,0"/>
                        <PasswordBox x:Name="PasswordBox" Width="120"/>
                    </StackPanel>
                </StackPanel>
            </StackPanel>
        </GroupBox>

        <StackPanel Grid.Row="6" Orientation="Horizontal">
            <CheckBox x:Name="EncryptCheck" IsChecked="True" Content="Encrypt=True" />
            <CheckBox x:Name="TrustServerCertCheck" Margin="16,0,0,0" Content="Trust Server Certificate=True" />
        </StackPanel>

        <StackPanel Grid.Row="8" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Width="100" Margin="0,0,8,0" IsDefault="True" Click="OnOkClick">OK</Button>
            <Button Width="100" IsCancel="True">Cancel</Button>
        </StackPanel>
    </Grid>
</Window>
