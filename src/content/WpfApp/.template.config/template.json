{
  "$schema": "http://json.schemastore.org/template",
  "author": "TirsvadGUI",
  "classifications": ["Desktop", "Windows", "WPF"],
  "identity": "TirsvadGUI.WpfApp",
  "name": "WPF Application",
  "shortName": "wpfapp",
  "tags": {
    "language": "C#",
    "type": "project"
  },
  "description": "A project template for creating a WPF application",
  "sourceName": "WpfApp",
  "preferNameDirectory": true,
  "symbols": {
    "Framework": {
      "type": "parameter",
      "description": "The target framework for the project.",
      "datatype": "choice",
      "choices": [
        {
          "choice": "net8.0-windows",
          "description": "Target .NET 8.0 (Windows)"
        },
        {
          "choice": "net7.0-windows", 
          "description": "Target .NET 7.0 (Windows)"
        },
        {
          "choice": "net6.0-windows",
          "description": "Target .NET 6.0 (Windows)"
        }
      ],
      "defaultValue": "net8.0-windows",
      "replaces": "TargetFrameworkVersion"
    },
    "EnableNullable": {
      "type": "parameter",
      "datatype": "bool",
      "defaultValue": "true",
      "description": "Whether to enable nullable reference types."
    },
    "EnableImplicitUsings": {
      "type": "parameter", 
      "datatype": "bool",
      "defaultValue": "true",
      "description": "Whether to enable implicit usings."
    }
  }
}